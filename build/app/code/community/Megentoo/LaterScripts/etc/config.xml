<config>
    <modules>
        <Megentoo_LaterScripts>
            <version>0.0.0.1</version>
        </Megentoo_LaterScripts>
    </modules>
    <global>
        <models>
            <laterscripts>
                <class>Megentoo_LaterScripts_Model</class>
            </laterscripts>
        </models>

        <blocks>
            <laterscripts>
                <class>Megentoo_LaterScripts_Block</class>
            </laterscripts>
        </blocks>

        <helpers>
            <laterscripts>
                <class>Megentoo_LaterScripts_Helper</class>
            </laterscripts>
        </helpers>
    </global>
    <frontend>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <laterscripts>
                        <type>singleton</type>
                        <class>laterscripts/observer</class>
                        <method>setHeadTemplate</method>
                    </laterscripts>
                </observers>
            </core_block_abstract_to_html_before>

            <core_block_abstract_to_html_after>
                <observers>
                    <laterscripts>
                        <type>singleton</type>
                        <class>laterscripts/observer</class>
                        <method>filterBlocks</method>
                    </laterscripts>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>
</config>
